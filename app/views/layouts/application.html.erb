<!DOCTYPE html>
<html>
  <head>
    <title>DeviseExample</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? and current_user.has_role? :admin -%>
        <nav class="navbar navbar-inverse">
         <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Devise Test</a>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <li><a href = "<%= destroy_user_session_path %>" data-method="delete" > <span class="glyphicon glyphicon-off"></span> Logout</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Role <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Add Role",'/roles/new' %></li>
                <li><%= link_to "View Role", '/roles' %></li>
              </ul>
            </li>
          </ul>
           <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">College <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Add College",'/colleges/new' %></li>
                <li><%= link_to "View College", '/colleges' %></li>
              </ul>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Marksheet <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Add Marksheet",'/marksheets/new' %></li>
                <li><%= link_to "View Marksheet", '/marksheets' %></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Student <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Add Student" ,'/students/new' %></li>
                <li><%= link_to "View Student", '/students' %></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">User <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Add User" %></li>
                <li><%= link_to "View User", '#' %></li>
              </ul>
            </li>
          </ul>
         
         
          
        </div>
      </nav> 
    Logged in as <strong><%= current_user.email %></strong>
    <% elsif user_signed_in? and current_user.has_role? :student -%>
        <nav class="navbar navbar-inverse">
         <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Devise Test</a>
          </div>
          <ul class="nav navbar-nav navbar-left">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile" %></li>
                <li><%= link_to "Settings", '#' %></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href = "<%= edit_user_registration_path %> "> <span class="glyphicon glyphicon-pencil"></span>Get My Marksheet </a></li>
            <li><a href = "<%= posts_path %> " id="myLink"> <span class="glyphicon glyphicon-pencil"></span>My Profile</a></li>
            <li><a href = "<%= posts_path %> " id="myLink"> <span class="glyphicon glyphicon-pencil"></span>Change my Password</a></li>


            <li><a href = "<%= destroy_user_session_path %>" data-method="delete" > <span class="glyphicon glyphicon-off"></span> Logout</a></li>
          </ul>
        </div>
      </nav>
    <div class="container">
    <% else %>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Devise Test</a>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <li><a href = "<%= new_user_registration_path %>"> <span class="glyphicon glyphicon-user"></span>Sign up </a></li>
            <li><a href = "<%= new_user_session_path %>" ><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
          </ul>
        </div>
      </nav> 

    <% end %>
    
     
        <%= yield %>
        <%= render 'layouts/footer' %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </body>
      </html>
