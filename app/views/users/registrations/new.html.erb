
<h2 align=center >Sign up</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="container container-signup">
    <form class="form-horizontal">
      <div class="form-group">
        <%= f.label :email,class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Enter Email address" ,class: "form-control" %>
            </div>
          </div> 
           </br>
          <div class="form-group" >
            <%= f.label :Username, class: "col-md-4 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :username, placeholder: "Enter Username" ,class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :password, class: "col-md-4 control-label" %>
                <div class="col-sm-8">
                <%= f.password_field :password, autocomplete: "new-password",placeholder: "Enter password" ,class: "form-control"  %>
                  </div>
                </div>

                  <div class="form-group">
                    <%= f.label :password_confirmation , class: "col-md-4 control-label"%>
                    <div class="col-sm-8">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "form-control" %>
                    </div>
                  </div>
                   </br>
                    <div class="actions" align="center">
                     
                        <%= f.submit "Sign up",class: 'btn btn-default btn-primary' %>
                       
                      </div>
                    </form>
                  </div>
                
                <div align="center">
                  <%= render "users/shared/links" %>
                   </div>
                   <% end %>



