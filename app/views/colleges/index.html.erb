<p id="notice"><%= notice %></p>

<%= form_tag(colleges_path, method: 'get') do %>
      <%= text_field_tag(:search, params[:search]) %>
      <%= submit_tag("Search", name: nil) %>
<% end %>

<table class="table" align ="center" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>State</th>
      <th>City</th>
      <th>Phone</th>
      
    
      
      <th align="center">Actions</th>

      <th colspan = "1 "></th>
    </tr>
  </thead>

  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.name %></td>
        <td><%= college.address %></td>
        <td><%= college.state %></td>
        <td><%= college.city %></td>
        <td><%= college.phone %></td>
        <td><%= link_to 'Show', college_path(college) , class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_college_path(college), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', college_path(college), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

