 <%= form_for(@student, remote: true) do |f| %>
      <div class="form-group" align="center">
        <%= f.label :College %>
        <%= f.select :college_id, College.all.map{|c| [c.name,c.id]}, :prompt => "Select a category" %>
      </div>

      <div class="form-group" align="center">
        <%= f.label :FirstName %>
        <%= f.text_field :first_name %>
      </div>
        
      <div class="form-group" align="center">
        <%= f.label :LastName %>
        <%= f.text_field :last_name %>
      </div>

      <div class="form-group" align="center">
        <%= f.label :DateofBirth %>
        <%= f.datetime_field :date_of_birth %>
      </div>

      <div class="form-group " align="center">
        <%= f.label :Mobile_number %>
        <%= f.text_field :mobile %>
      </div>

      <div class="form-group" align="center">
        <%= f.label :EmailID %>
        <%= f.text_field :email_id %>
      </div>

      <div class="form-group " align="center">
        <%= f.submit :Submit, class: 'btn btn-success' %>
      </div>
  <% end %>

