<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class="table" align ="center" >
  <thead>
    <tr>
      <th>FirstName</th>
      <th>LastName</th>
      <th>Date of Birth</th>
      <th>Mobile</th>
      <th>Email</th>
      
      <th align="center">Actions</th>
      <th colspan = "1 "></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.date_of_birth %></td>
        <td><%= student.mobile %></td>
        <td><%= student.email_id %></td>
        <td><%= link_to 'Show', student_path(student) , class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', student_path(student), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

